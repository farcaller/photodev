- title "Edit #{resource_name.to_s.humanize}", false

= twitter_bootstrap_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:method => :put}) do |f|
  = f.inputs "Edit #{resource_name.to_s.humanize}" do
    = f.text_field :username
    
    = f.email_field :email

    = f.password_field :password do
      %span.help-block
        leave blank if you don't want to change it.

    = f.password_field :password_confirmation, 'Confirm Password'
    
    = f.password_field :current_password, 'Current Password' do
      %span.help-block
        we need your current password to confirm your changes.

  = f.actions do
    = f.submit 'Update'
    = link_to 'Cancel', :back, :class => "btn"
    %span{:style => "float: right; padding-top: 7px"}
      Unhappy?
      = link_to "Cancel my account", registration_path(resource_name), :confirm => "Are you sure?", :method => :delete
